root = true

[*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,js}]
indent_style = tab
indent_size = 4
quote_type = single

[*.html]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = tab
indent_size = 4

# Ignore paths
[**/polyfills.ts]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
